[alias]
a = add
aa = add --all
amend = commit --amend -C HEAD
blog = log origin/main... --left-right
br = branch
cm = commit -m
co = checkout
ds = diff --staged
fa = fetch --all
fixup = commit --fixup
flog = log --pretty=fuller --decorate
llog = log --date=local
lol = log --graph --decorate --oneline
lola = log --graph --decorate --oneline --all
merff = merge --ff-only
pa = push --all
pfwl = push --force-with-lease
puff = pull --ff-only
rb = rebase
rum = rebase main@{u}
sco = restore --staged
squash = commit --squash
st = status
unstage = reset HEAD
fuckit = !git reset --hard && git clean -df

[core]
editor = nvim
pager = delta

[color]
ui = auto
branch = auto
interactive = auto
status = auto

[push]
default = simple

[pull]
rebase = true

[init]
  defaultBranch = main

[interactive]
diffFilter = delta --color-only

[delta]
features = side-by-side line-numbers decorations
whitespace-error-style = 22 reverse

[delta "decorations"]
commit-decoration-style = bold yellow box ul
file-style = bold yellow ul
file-decoration-style = none
